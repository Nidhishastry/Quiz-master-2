<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.redux.kumardivyarajat.quiz.QuizGameActivity"
    android:background="#ffd1ff5b">

    <TextView
        android:layout_width="352dp"
        android:layout_height="144dp"
        android:text="Questions"
        android:id="@+id/questions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp"
        android:background="#ffe7ffe4"
        android:textSize="20sp"
        android:textColor="#ff47b4ff" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:id="@+id/optionA"
        android:layout_below="@+id/questions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:checked="false"
        />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:id="@+id/optionB"
        android:checked="false"
        android:layout_alignTop="@+id/optionA"
        android:layout_alignLeft="@+id/optionD"
        android:layout_alignStart="@+id/optionD" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:id="@+id/optionC"
        android:layout_marginTop="83dp"
        android:checked="false"
        android:layout_below="@+id/optionA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionD"
        android:checked="false"
        android:text="New RadioButton"
        android:layout_alignTop="@+id/optionC"
        android:layout_toRightOf="@+id/optionC"
        android:layout_toEndOf="@+id/optionC" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Answer"
        android:id="@+id/quiz_game_submit_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
