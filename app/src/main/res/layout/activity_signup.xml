<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="First Name"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/fname"
        android:hint="First Name"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Last Name"
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:textSize="15dp"
        android:layout_alignTop="@+id/lname"
        android:layout_toLeftOf="@+id/lname"
        android:layout_toStartOf="@+id/lname" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:id="@+id/lname"
        android:hint="Last Name"
        android:textSize="15dp"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Email"
        android:id="@+id/textView4"
        android:textSize="15dp"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:hint="E-mail"
        android:textSize="15dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Username"
        android:id="@+id/textView5"
        android:textSize="15dp"
        android:layout_alignTop="@+id/uname"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:id="@+id/uname"
        android:hint="Username"
        android:textSize="15dp"
        android:layout_above="@+id/pword"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pword"
        android:hint="Password"
        android:textSize="15dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignRight="@+id/bktologin"
        android:layout_alignEnd="@+id/bktologin" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Password"
        android:id="@+id/textView6"
        android:textSize="15dp"
        android:layout_above="@+id/register"
        android:layout_toLeftOf="@+id/pword"
        android:layout_toStartOf="@+id/pword"
        android:layout_marginBottom="33dp" />

    <Button
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Register"
        android:id="@+id/register"
        android:textSize="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Back To Login"
        android:id="@+id/bktologin"
        android:textSize="13dp"
        android:layout_alignTop="@+id/register"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:textColor="#000000"
        android:id="@+id/register_error"
        android:layout_below="@+id/register"
        android:layout_alignParentRight="true" />
</RelativeLayout>
