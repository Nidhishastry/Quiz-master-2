<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="Username"
            android:id="@+id/uname"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignLeft="@+id/passres"
            android:layout_alignStart="@+id/passres"
            android:layout_alignRight="@+id/pword"
            android:layout_alignEnd="@+id/pword" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:id="@+id/loginErrorMsg"
            android:textColor="#000000"
            android:layout_below="@+id/passres"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Username"
            android:id="@+id/textView2"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="45dp"
            android:layout_above="@+id/pword"
            android:layout_toLeftOf="@+id/uname"
            android:layout_toStartOf="@+id/uname" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pword"
            android:hint="Password"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/pworda"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/passres"
            android:layout_alignStart="@+id/passres" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Password"
            android:id="@+id/pworda"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="73dp"
            android:layout_above="@+id/login"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />

        <Button
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:text="Register"
            android:id="@+id/registerbtn"
            android:textSize="13dp"
            android:textColor="#000000"
            android:layout_marginBottom="55dp"
            android:layout_above="@+id/passres"
            android:layout_alignRight="@+id/pworda"
            android:layout_alignEnd="@+id/pworda" />

        <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Login"
            android:id="@+id/login"
            android:textSize="13dp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/registerbtn"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_toEndOf="@+id/registerbtn"
            android:layout_toRightOf="@+id/registerbtn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Forgot Password"
            android:id="@+id/passres"
            android:textSize="13dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="39dp" />

</RelativeLayout>